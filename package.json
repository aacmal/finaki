{
  "name": "express-with-typescript-starter",
  "version": "1.0.0",
  "description": "Starter repository for creating expressjs projects with typescript and eslint",
  "main": "index.js",
  "scripts": {
    "build": "npx tsc",
    "start": "node dist/index.js",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/index.js\"",
    "lint": "eslint ./**/*.ts",
    "format": "eslint ./**/*.ts --fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.15",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.2.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.2",
    "typescript": "^4.9.4"
  }
}
